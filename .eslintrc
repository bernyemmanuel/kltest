{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ],
        "indent": [2, 4],
        "comma-dangle": ["error", "never"],
        "arrow-parens": "off",
    },
    "globals": {
        "config": true,
        "fs": true,
        "async": true,
        "mysql": true,
        "promise": true,
        "validateParams": true,
        "sendResponse": true,
        "connectMysql": true,
        "path": true,
        "rootLocation": true
    }
}